{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://open-receivable.org/schemas/address.json",
  "title": "Address",
  "description": "Physical address structure",
  "type": "object",
  "required": ["street1", "city", "state", "postalCode", "country"],
  "properties": {
    "street1": {
      "type": "string",
      "maxLength": 200,
      "description": "Street address line 1"
    },
    "street2": {
      "type": "string",
      "maxLength": 200,
      "description": "Street address line 2 (optional)"
    },
    "city": {
      "type": "string",
      "maxLength": 100,
      "description": "City name"
    },
    "state": {
      "type": "string",
      "maxLength": 50,
      "description": "State or province"
    },
    "postalCode": {
      "type": "string",
      "maxLength": 20,
      "description": "ZIP or postal code"
    },
    "country": {
      "type": "string",
      "maxLength": 2,
      "pattern": "^[A-Z]{2}$",
      "description": "ISO 3166-1 alpha-2 country code"
    }
  }
}
