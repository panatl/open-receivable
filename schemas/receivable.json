{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://open-receivable.org/schemas/receivable.json",
  "title": "Receivable",
  "description": "Receivable entity representing amounts owed",
  "type": "object",
  "required": ["receivableId", "contractId", "customerId", "receivableType", "dueDate", "originalAmount", "outstandingAmount", "status"],
  "properties": {
    "receivableId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the receivable"
    },
    "contractId": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to contract"
    },
    "customerId": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to customer"
    },
    "receivableType": {
      "type": "string",
      "enum": ["MONTHLY_PAYMENT", "DOWN_PAYMENT", "LATE_FEE", "EXCESS_MILEAGE", "DAMAGE_FEE", "EARLY_TERMINATION", "OTHER"],
      "description": "Type of receivable"
    },
    "dueDate": {
      "type": "string",
      "format": "date-time",
      "description": "Payment due date"
    },
    "originalAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Original amount due"
    },
    "outstandingAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Remaining unpaid amount"
    },
    "paidAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Amount paid so far"
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "PAID", "PARTIAL", "OVERDUE", "WRITTEN_OFF"],
      "description": "Receivable status"
    },
    "invoiceNumber": {
      "type": "string",
      "maxLength": 50,
      "description": "Invoice reference number"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Description of charge"
    },
    "createdDate": {
      "type": "string",
      "format": "date-time",
      "description": "Receivable creation timestamp"
    },
    "paidDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date fully paid"
    },
    "agingDays": {
      "type": "integer",
      "minimum": 0,
      "description": "Days past due"
    }
  }
}
